    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.TicketSelectActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">



    <androidx.cardview.widget.CardView
        android:id="@+id/ticketSelect1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_200"
        app:cardCornerRadius="10dp"
        android:layout_margin="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/ticketSelect1TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Tam"
            android:textSize="25dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"></TextView>


        <Button
            android:id="@+id/ticketselect1AddPositiveButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:textSize="50dp"
            android:gravity="center"
            android:background="@drawable/ic_launcher_background"
            android:layout_gravity="center"></Button>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ticketSelect1NumberTextview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="40dp"
                android:text="0"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >
            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adet"
                android:layout_gravity="center"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/ticketSelect1NegativeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="50dp"
            android:gravity="center"
            android:background="@drawable/ic_launcher_background"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"></Button>

    </LinearLayout>

    </androidx.cardview.widget.CardView>


