<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ActivityDetailActivity">

    <ImageView
        android:id="@+id/activityImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/common_full_open_on_phone"
        app:tint="?android:attr/colorMultiSelectHighlight"></ImageView>


    <TextView
        android:id="@+id/activityTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Title"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_location"
            app:tint="?android:attr/colorMultiSelectHighlight"></ImageView>


        <TextView
            android:id="@+id/activityLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            ></TextView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="15dp">


            <TextView
                android:id="@+id/activityCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Activity"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                ></TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/activitDateDayNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:layout_marginLeft="15dp"
            android:textSize="45dp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activityDateMonthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"></TextView>

            <TextView
                android:id="@+id/activiyDateDayTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:layout_marginLeft="5dp"></TextView>

        </LinearLayout>

        <View
            android:id="@+id/activityDateBrace"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:background="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></View>


        <TextView
            android:id="@+id/activitDateDayNumberTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="45dp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activityDateMonthTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"></TextView>

            <TextView
                android:id="@+id/activiyDateDayTextview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:layout_marginLeft="5dp"></TextView>

        </LinearLayout>


        <View
            android:id="@+id/activityTimeBraceview"
            android:layout_width="1dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@color/black"></View>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/activityTimeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saat"
                android:layout_gravity="center"></TextView>

            <TextView
                android:id="@+id/activityTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>




        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/activityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity Button"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:textColor="@color/white"

        ></Button>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/activityInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Etkinlik Bilgileri"
                android:layout_marginLeft="15dp"
                android:background="@color/black"
                android:textColor="@color/white"


                ></Button>


            <Button
                android:id="@+id/activiyDescriptionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Açıklama"
                android:layout_marginLeft="15dp"
                android:background="@color/black"
                android:textColor="@color/white"

                ></Button>

            <Button
                android:id="@+id/activityLocationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konum"
                android:layout_marginLeft="15dp"
                android:background="@color/black"
                android:textColor="@color/white"

                ></Button>


        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/activityInfoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_marginLeft="15dp"
               ></ImageView>

            <TextView
                android:id="@+id/activityCategoryDetailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Category"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"></TextView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_height="0.8dp"
            android:alpha="0.1"
            android:background="@color/black"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_marginLeft="15dp"
                ></ImageView>

            <TextView
                android:id="@+id/activityDAteDetailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Detail"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"></TextView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_height="0.8dp"
            android:alpha="0.1"
            android:background="@color/black"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_marginLeft="15dp"
                ></ImageView>

            <TextView
                android:id="@+id/activityDetailPhoneNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"></TextView>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_height="0.8dp"
            android:alpha="0.1"
            android:background="@color/black"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_marginLeft="15dp"
                ></ImageView>

            <TextView
                android:id="@+id/activityPriceInfoDetailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Info"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"></TextView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:alpha="0.1"
            android:background="@color/black"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_marginLeft="15dp"
                ></ImageView>

            <TextView
                android:id="@+id/activityOrganizationCompanyDetailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organization Company"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"></TextView>


        </LinearLayout>






    </LinearLayout>


    <LinearLayout
        android:id="@+id/descriptionLinearLayot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activityDetailTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textSize="18dp"

            ></TextView>

        <TextView
            android:id="@+id/activityDetailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"



            ></TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/locationInfoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_location"
                android:layout_marginLeft="15dp"></ImageView>


            <TextView
                android:id="@+id/activityAdressDescriptionDetailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adress Description"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"></TextView>




        </LinearLayout>





    </LinearLayout>






</androidx.appcompat.widget.LinearLayoutCompat>