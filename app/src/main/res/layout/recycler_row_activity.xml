<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp">

    <ImageView
        android:id="@+id/activityImageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@color/black"></ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/actvityTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Title"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        ></TextView>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_location"
        app:tint="?android:attr/colorMultiSelectHighlight"></ImageView>


     <TextView
         android:id="@+id/activityLocationTextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Location"
         android:textSize="12dp"
         android:layout_gravity="center"
         android:layout_weight="1"
         ></TextView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="15dp">


            <TextView
                android:id="@+id/activityCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Activity"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                ></TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <TextView
        android:id="@+id/activitDateDayNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:layout_marginLeft="15dp"
        android:textSize="45dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activityDateMonthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"></TextView>

        <TextView
            android:id="@+id/activiyDateDayTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:layout_marginLeft="5dp"></TextView>

    </LinearLayout>

        <View
            android:id="@+id/activityDateBrace"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:background="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></View>


        <TextView
            android:id="@+id/activitDateDayNumberTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="45dp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activityDateMonthTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"></TextView>

            <TextView
                android:id="@+id/activiyDateDayTextview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:layout_marginLeft="5dp"></TextView>

        </LinearLayout>


        <View
            android:id="@+id/activityTimeBraceview"
            android:layout_width="1dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@color/black"></View>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/activityTimeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saat"
                android:layout_gravity="center"></TextView>

            <TextView
                android:id="@+id/activityTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>




        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           ></TextView>




    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>